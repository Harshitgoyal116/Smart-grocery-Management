    <!-- Modal Bootstarp -->
    <!-- Modal -->
    <div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Employees</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="mb-3">
                            <label for="empID" class="form-label">Employee ID</label>
                            <input type="text" class="form-control" id="empID" placeholder="Enter Employee ID.">
                        </div>
                        <div class="mb-3">
                            <label for="empPass" class="form-label">Employee Password</label>
                            <input type="text" class="form-control" id="empPass" placeholder="Enter Employee Password">
                        </div>
                        <div class="mb-3">
                            <label for="empName" class="form-label">Employee Name</label>
                            <input type="text" class="form-control" id="itemName" placeholder="Enter Employee Name">
                        </div>
                        <div class="mb-3">
                            <label for="empDepart" class="form-label">Department</label>
                            <input type="text" class="form-control" id="empDepart" placeholder="Enter Department info.">
                        </div>
                        <div class="mb-3">
                            <label for="empDOB" class="form-label">Date of Birth</label>
                            <input type="text" class="form-control" id="empDOB" placeholder="Enter Employee DOB">
                        </div>
                        <div class="mb-3">
                            <label for="empNumber" class="form-label">Phone Number</label>
                            <input type="text" class="form-control" id="empNumber"
                                placeholder="Enter Employee contact Number">
                        </div>
                        <div class="mb-3">
                            <label for="empAddress" class="form-label">Address</label>
                            <input type="text" class="form-control" id="empAddress"
                                placeholder="Enter Employee Address">
                        </div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <div>Copyright &copy; 2021</div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Bootstarp -->


    <table class="empTable table table-striped">
