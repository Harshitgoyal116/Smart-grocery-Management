    <!-- Modal Bootstarp -->
    <!-- Modal -->
    <div class="modal fade" id="addGroceryModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Grocery Items</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="mb-3">
                            <label for="itemID" class="form-label">Item Code</label>
                            <input type="text" class="form-control" id="itemID" placeholder="Enter Grocery ID.">
                        </div>
                        <div class="mb-3">
                            <label for="itemName" class="form-label">Item Name</label>
                            <input type="text" class="form-control" id="itemName" placeholder="Enter Grocery Name">
                        </div>
                        <div class="mb-3">
                            <label for="itemExp" class="form-label">Expiry Date</label>
                            <input type="text" class="form-control" id="itemExp" placeholder="Enter Expiry Date">
                        </div>
                        <div class="mb-3">
                            <label for="itemMfd" class="form-label">Manufacturing Date</label>
                            <input type="text" class="form-control" id="itemMfd" placeholder="Enter Manufacturing Date">
                        </div>
                        <div class="mb-3">
                            <label for="itemQty" class="form-label">Quantity</label>
                            <input type="text" class="form-control" id="itemQty" placeholder="Enter Quantity">
                        </div>
                        <div class="mb-3">
                            <label for="itemCP" class="form-label">Cost Price</label>
                            <input type="text" class="form-control" id="itemCP" placeholder="Enter Purchasing Amount">
                        </div>
                        <div class="mb-3">
                            <label for="itemSP" class="form-label">Selling Price</label>
                            <input type="text" class="form-control" id="itemSP" placeholder="Enter Selling Amount">
                        </div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <div>Copyright &copy; 2021</div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Bootstarp -->

    <table class="empTable table table-striped">
