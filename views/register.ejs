<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register</title>
  <link rel="shortcut icon" href="img/favicon.png" type="image/x-icon" />

  <!-- Bootstrap CDN 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous" />

  <link rel="stylesheet" href="css/login.css" />
</head>

<body>
  <header>
    <form action="/register" method="post">
      <div class="main-header">
        <h1>Admin Register</h1>
        <hr class="hr" />
        <h3>Welcome to Smart Grocery Management</h3>
        <p><input class="input" type="text" name="uname" id="uname" value="<%= messages.uname %>" placeholder="Username"
            autocomplete="off" required autofocus /></p>
        <p><input class="input" type="password" name="pass" id="pass" placeholder="Password" required /></p>
        <p><input class="showpassBox" type="checkbox" name="showpass" id="showpass" onclick="isPassVisible()" />Show
          Password</p>

        <!-- Display Error -->
        <% if(messages.error) {%>
          <div class="alert alert-danger alert-dismissible fade show errors-div" role="alert">
            <%= messages.error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% } %>
            <!-- Display Error -->

            <p><button class="btn-sign-in" type="submit">Sign up</button></p>
      </div>
    </form>
  </header>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"></script>

  <!-- JavaScript -->
  <script type="text/javascript">
    // Show password Checkbox function
    function isPassVisible() {
      var showPassword = document.getElementById("pass");
      if (showPassword.type == "password") {
        showPassword.type = "text";
      } else {
        showPassword.type = "password";
      }
    }
  </script>


</body>

</html>